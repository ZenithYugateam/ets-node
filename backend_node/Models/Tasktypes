const mongoose = require('mongoose');

const TaskSchema = new mongoose.Schema(
  {
    name: {
      type: String,
      required: true,
      trim: true,
      minlength: 2,
    },
    department: {
      type: String,
      required: true,
      trim: true,
    },
    createdAt: {
      type: Date,
      default: Date.now, // Automatically set to the current date/time
    },
  },
  { timestamps: true } // Automatically adds `createdAt` and `updatedAt` fields
);

const MultiTaskSchema = new mongoose.Schema(
  {
    tasks: {
      type: [TaskSchema], // Embed an array of tasks
      validate: {
        validator: function (value) {
          return value.length > 0; // Ensure at least one task is present
        },
        message: 'At least one task is required.',
      },
    },
    company: {
      type: String,
      required: true, // Make company a required field
      enum: ['IDA', 'IPU'], // Restrict to valid company names
      trim: true,
    },
    submittedAt: {
      type: Date,
      default: Date.now, // Automatically set to the current date/time
    },
  },
  { timestamps: true } // Automatically adds `createdAt` and `updatedAt` fields
);

module.exports = mongoose.model('MultiTask', MultiTaskSchema);
