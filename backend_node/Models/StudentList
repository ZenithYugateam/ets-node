const mongoose = require('mongoose');

const StudentSchema = new mongoose.Schema({
    name: { type: String, required: true, trim: true },
    age: { type: Number, required: true, min: 1 },
    hasPassport: { type: Boolean, required: true },
    highestQualification: {
      type: String,
      enum: ['High School', 'Diploma', "Bachelor's Degree", "Master's Degree", 'PhD'],
      required: true,
    },
    status: {
      type: String,
      enum: ['enrolled', 'not enrolled'], // Updated enum values
      required: true,
    },
  }, { timestamps: true });
  

module.exports = mongoose.model('StudentList', StudentSchema);
